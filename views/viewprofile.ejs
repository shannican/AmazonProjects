<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Bootstrap demo</title>
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="../stylesheets/viewprofile.css">
    <link rel="stylesheet" href="../stylesheets/navbar.css">
  </head>
  <body>
    <div style="width: 35rem; z-index:99999999;" class="offcanvas offcanvas-end" tabindex="-1" id="offcartRight" aria-labelledby="offcanvasRightLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasRightLabel">Your Cart</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body" >

      </div>
    </div>
    <div id="main">
      <nav style="width: 5%; position:absolute; left:95%; top:1%;background:transparent;" class="navbar  fixed-top">
        <div class="container-fluid">
          <button style="position:relative; left:-22%;" class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div style="width: 20vw;" class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
            <div class="offcanvas-header">
              <div id="stolen-logo"><img src="../images/Logo_Stolen_PeterBeatty-removebg-preview.png" alt=""></div>
              <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
            </div>
            <div class="offcanvas-body">
              <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                <li class="nav-item">
                  <div id="home">
                    <i class="ri-home-3-line"></i>
                    <a class="nav-link active" aria-current="page" href="/profile">Home</a>
                  </div>
                  <div id="profile">
                    <i class="ri-account-circle-line"></i>
                    <a class="nav-link active" aria-current="page" href="/viewprofile">Your Profile</a>
                  </div>
                  <div id="product-link">
                    <i class="ri-product-hunt-line"></i>
                    <a class="nav-link active" aria-current="page" href="/allproduct">Products</a>
                  </div>
                  <div id="cart-link" >
                    <i class="ri-shopping-cart-2-line"></i>
                    <a class="nav-link active" class="nav-link active" data-bs-toggle="offcanvas" data-bs-target="#offcartRight" aria-controls="offcartRight" aria-current="page" aria-current="page" href="">Your Cart</a>
                  </div>
                  <div id="wislist-link">
                    <i class="ri-heart-line"></i>
                    <a class="nav-link active" aria-current="page" href="/whishlist">Whishlist</a>
                  </div>
                  <div id="logout-link">
                    <i class="ri-logout-box-line"></i>
                    <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                  </div>  
                </li>
              </ul>
            </div>
          </div>
        </div>
      </nav>
      <!-- <a id="logoutbtn" href="/profile"><Button>Profile</Button></a> -->
      <div id="box">
        <div id="left">
          <h1>Your Profile</h1>
          <div id="photu">
            <img src="/images/uploads/userImageUpload/<%= data.dpimage %>" alt="">
            <form action="/updateProfile/<%=data._id%>" id="prof" method="post" enctype="multipart/form-data">
              <input name="dpimage" type="file" id="pp-input" >
              <input type="submit" value="submit">
              
            </form>
          </div>
          <button>Upload New Photo</button>
          <div id="name">
            <h1><%= data.fname %></h1>
            <h1><%= data.lname %></h1>
        </div>
          <h3><%= data.proffession %></h3>
          <div class="text">Age :-<h4><%= data.age %></h4></div>
          <div class="text">Birth :-<h4><%= data.birth %></h4></div>
          <div class="text">Mob No. :-<h4><%= data.contact %></h4></div>
          <div class="text">Email :-<h4><%= data.email %></h4></div>
          <div class="text">Address :-<h4><%= data.address %></h4></div>
          <p>Member Since :- <span>01/01/2023</span> </p>
        </div>
        <div id="right">
          <h1>Edit Your Profile</h1><br><br>
          <hr>
          <div id="container">
            <div id="user-info">
              <h4>Change User Info</h4>
              <form id="form" action="/update/<%=data._id%>" method="post" >
                <label for="">First Name</label>
                <input type="text" name="fname" value="<%= data.fname %>">
                <label for="">Last Name</label>
                <input type="text" name="lname" value="<%= data.lname %>">

                <label for="">Proffession</label>
                <input type="text" name="proffession" value="<%= data.proffession %>">

                <label for="">Age</label>
                <input type="text" name="age" value="<%= data.age %>">

                <label for="">Date Of Birth</label>
                <input type="text" name="birth" value="<%= data.birth %>">

                <label for="">Mobile Number</label>
                <input type="text" name="contact" value="<%= data.contact %>">
                
                <label for="">Address</label>
                <input type="text" name="address" value="<%= data.address %>">
        
                <input id="submit-btn" type="submit" value="Update">
                <input id="reset-btn" type="reset" value="Reset">
             </form>

            </div>
            <div id="line"></div>
            <div id="change-password">
              <h4>Change Password</h4>
              <form id="form" action="/changepassword" method="post">
                <label for="">Email</label>
                <input type="email" name="email" placeholder="">

                <label for="">Old Password</label>
                <input type="password" name="password" placeholder="******">

                <label for="">New Password</label>
                <input type="password" name="newpassword">

                <input id="submit-btn" type="submit" value="Update">
                <input id="reset-btn" type="reset" value="Reset">
             </form>
            </div>
          </div>
        </div>
      </div>
    </div>


    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="../javascripts/viewprofile.js"></script>
    <script src="../javascripts/navbar.js"></script>

  </body>
</html>