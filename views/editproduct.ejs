</head>
<body>

    <div id="main">
            <div id="left">
                <div id="overlay">
                    <h1>STOLEN</h1>
                </div>
            </div>
    
            <div id="right">
                <nav style="width: 5%; position:absolute; left:93%; top:2%;background:transparent;" class="navbar  fixed-top">
                    <div class="container-fluid">
                      <button style="position:relative; left:-22%;" class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                        <span class="navbar-toggler-icon"></span>
                      </button>
                      <div style="width: 20vw;" class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                        <div class="offcanvas-header">
                            <div id="stolen-logo"><img src="../images/Logo_Stolen_PeterBeatty-removebg-preview.png" alt=""></div>
                          <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                        </div>
                        <div class="offcanvas-body">
                          <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                            <li class="nav-item">
                                <div id="home">
                                    <i class="ri-home-3-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/profile">Home</a>
                                  </div>
                                  <div id="profile">
                                    <i class="ri-account-circle-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/viewprofile">Your Profile</a>
                                  </div>
                                  <div id="product-link">
                                    <i class="ri-product-hunt-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/allproduct">Products</a>
                                  </div>
                                  <div id="cart-link">
                                    <i class="ri-shopping-cart-2-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/cart">Your Cart</a>
                                  </div>
                                  <div id="wislist-link">
                                    <i class="ri-heart-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/whishlist">Whishlist</a>
                                  </div>
                                  <div id="logout-link">
                                    <i class="ri-logout-box-line"></i>
                                    <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                                  </div>  
                            </li>
                          </ul>
                      </div>
                    </div>
                  </nav>
                <h1>Edit Products</h1>
                <form action="/editproduct/product/<%= data._id %>" id="form" method="post" enctype="multipart/form-data">
                    <div id="productname-input">
                        <label for="productname">Product Name :-</label>
                        <input type="text" name="productname" value="<%= data.productname %>">
                    </div>
                    <div id="productimage-input">
                        <label for="pic">Product image 1</label>
                        <input type="file" name="pic" value="<%= data.pic[1] %>" >
                    </div>
                    <div id="productType">
                        <label for="select">Choose Product Type*</label>
                        <select class="select" name="producType">
                            <option  selected>Choose One</option>
                            <option value="1">Electronic</option>
                            <option value="2">Cloths</option>
                        </select>
                    </div>
                    <div id="productimage-input">
                        <label for="pic">Product image 2</label>
                        <input type="file" name="pic">
                    </div>
                    <div id="desc-input">
                        <label for="desc">Description :-</label>
                        <input type="text" name="desc" value="<%= data.desc %>">
                    </div>
                    <div id="productimage-input">
                        <label for="pic">Product image 3</label>
                        <input type="file" name="pic">
                    </div>
                    <div id="price-input">
                        <label for="price">Price :-</label>
                        <input type="text" name="price" value="<%= data.price %>">
                    </div>
                    <div id="productimage-input">
                        <label for="pic">Product image 4</label>
                        <input type="file" name="pic">
                    </div>
                    <div id="discount-input">
                        <label for="discount">Discount :-</label>
                        <input type="text" name="discount" value="<%= data.discount %>">
                    </div>
                    <div id="checkbox">
                        <input id="check" type="checkbox" name="check" value="form">
                        <label style="margin-left: 10px; margin-bottom:3px;" for="checkbox">Agree, your all filled information is correct</label>
                    </div>
                    <div id="reset-input">
                    </div>
                    <div id="submit-input">
                        <input type="reset" value="Reset">
                        <input type="submit" value="Update">
                    </div>
                </form>
            </div>

    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
</body>
</html>