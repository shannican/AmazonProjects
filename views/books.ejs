<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css" rel="stylesheet">
    <link rel="stylesheet" href="../stylesheets/books.css">
</head>
<body>

  <div style="width: 35rem; z-index:99999999;" class="offcanvas offcanvas-end" tabindex="-1" id="offcartRight" aria-labelledby="offcanvasRightLabel">
    <div class="offcanvas-header">
      <h5 class="offcanvas-title" id="offcanvasRightLabel">Your Cart</h5>
      <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
    </div>
    <div class="offcanvas-body" >

    </div>
  </div>

  

    <div id="main">
      <a class="cart-btnn" data-bs-toggle="offcanvas" data-bs-target="#offcartRight" aria-controls="offcartRight" aria-current="page" href=""><i class="ri-shopping-cart-2-line"></i></a>
        <nav style="width: 5%; position:absolute; left:95%; top:0%;background:transparent; z-index:99999;" class="navbar  fixed-top">
            <div class="container-fluid">
              <button style="position:relative; left:-22%;" class="navbar-toggler" type="button" data-bs-toggle="offcanvas" data-bs-target="#offcanvasNavbar" aria-controls="offcanvasNavbar">
                <span class="navbar-toggler-icon"></span>
              </button>
              <div style="width: 20vw;" class="offcanvas offcanvas-end" tabindex="-1" id="offcanvasNavbar" aria-labelledby="offcanvasNavbarLabel">
                <div class="offcanvas-header">
                  <div id="stolen-logo"><img src="../images/Logo_Stolen_PeterBeatty-removebg-preview.png" alt=""></div>
                  <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>
                <div class="offcanvas-body">
                  <ul class="navbar-nav justify-content-end flex-grow-1 pe-3">
                    <li class="nav-item">
                      <div id="home">
                        <i class="ri-home-3-line"></i>
                        <a class="nav-link active" aria-current="page" href="/profile">Home</a>
                      </div>
                      <div id="profile">
                        <i class="ri-account-circle-line"></i>
                        <a class="nav-link active" aria-current="page" href="/viewprofile">Your Profile</a>
                      </div>
                      <div id="product-link">
                        <i class="ri-product-hunt-line"></i>
                        <a class="nav-link active" aria-current="page" href="/allproduct">Products</a>
                      </div>
                      <div id="cart-link">
                        <i class="ri-shopping-cart-2-line"></i>
                        <a class="nav-link active" data-bs-toggle="offcanvas" data-bs-target="#offcartRight" aria-controls="offcartRight" aria-current="page" aria-current="page" href="">Your Cart</a>
                      </div>
                      <div id="wislist-link">
                        <i class="ri-heart-line"></i>
                        <a class="nav-link active" aria-current="page" href="/whishlist">Whishlist</a>
                      </div>
                      <div id="logout-link">
                        <i class="ri-logout-box-line"></i>
                        <a class="nav-link active" aria-current="page" href="/logout">Logout</a>
                      </div>  
                    </li>
                  </ul>
                </div>
              </div>
            </div>
          </nav>
          <!-- <h1>Your All Products</h1><hr style="margin-top:40px;"> -->
          <div id="conatiner">
            <div id="filter">
              <h3 id="filter-text">Filter</h3>
              <div id="allfilter">
                <a class="input-radio" href="/allproduct">
                  <input type="radio" id="allproducts" name="fav_language">
                  <a id="input-labal" href="/allproduct">Allproduct</a>
                </a>
                    <a class="input-radio" href="/cloths">
                      <input type="radio" id="clothing" name="fav_language"/>
                      <a id="input-labal" href="/cloths">Cloths</a>
                    </a>
                    <a class="input-radio" href="/electricProduct">
                      <input type="radio" id="electronic" name="fav_language"/>
                      <a id="input-labal" href="/electricProduct">Electronics</a>
                    </a>
                    <a class="input-radio" href="/sportsProduct">
                      <input type="radio" id="electronic" name="fav_language" />
                      <a id="input-labal" href="/sportsProduct">Sports</a>
                    </a>
                    <a class="input-radio" href="/kitchenProduct">
                      <input type="radio" id="kitchen" name="fav_language"/>
                      <a id="input-labal" href="/kitchenProduct">Kitchens</a>
                    </a>
                    <a class="input-radio" href="/books">
                        <input type="radio" id="books" name="fav_language"checked/>
                        <a id="input-labal" href="/books">Books</a>
                    </a>
              </div>
            </div>
            <div id="products">
              <h3 id="prod-text">Books</h3>
              <div id="allproduct">

                <% product.forEach(function(product){ %>
                  <div class="cards">
                    <div class="img">
                      <div class="whislist" title="Add Whishlist">
                        <a href="">
                          <i class="ri-heart-line"></i>
                        </a>
                      </div>
                      <img id="img1"  src="/images/uploads/productImageUpload/<%= product.pic[0] %>"  alt="">
                      <img id="img2"  src="/images/uploads/productImageUpload/<%= product.pic[1] %>"  alt="">
                      <img id="img3"  src="/images/uploads/productImageUpload/<%= product.pic[2] %>"  alt="">
                      <img id="img4"  src="/images/uploads/productImageUpload/<%= product.pic[3] %>"  alt="">
                    </div>
                    <div class="product-name">
                      <h2 style="font-size: 28px;"><%= product.productname %></h2>
                    </div>
                    <div class="description">
                      <p><%= product.desc %></p>
                    </div>
                    <div class="price">
                      <p>Rs. <%= product.price %></p>
                      <p style="color:rgb(251, 0, 0);">off:- <%= product.discount %>%</p>
                    </div>
                    <% if(user.products.includes(product._id)){ %>
                      <div class="button">
                        <a href="/editproduct/<%= product._id %>">
                          <h5>edit product</h5>
                        </a>
                        <a href="/delete/product/<%= product._id %>"><i style="font-size: 23px"
                            class="ri-delete-bin-5-line"></i></a>
                      </div>
                      <%}else{%>
                        <div class="button">
                          <a href="" style="background-color: blue">
                            <h5>Buy</h5>
                          </a>
                          <a href="/cart/<%= product._id %>" style="background-color: sienna">
                            <h5>Add Cart</h5>
                          </a>
                        </div>
                        <% }%>
                  </div>
                <% }) %>
              
              </div>
            </div>
           
          </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
    <script src="../javascripts/books.js"></script>
</body>
</html>